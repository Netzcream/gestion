{% extends 'base.html.twig' %}

{% block title %}
	Empresas
{% endblock %}

{% block body %}
	<h1>Empresas</h1>



	
	{{ form_start(form) }}
	<div class="row mb-3">
		<div class="col">
			{% include 'form/text.html.twig' with {campo : form.texto} %}
		</div>
	</div>
	<div class="row mb-3">
		<div class="col">
			{{form_widget(form.buscar)}}
		</div>
	</div>
	{{ form_end(form) }}
	

	<div class="mb-3 d-flex justify-content-end">
		
		
		<a href="{{path('empresas_nuevo')}}" class="btn btn-primary"><i class="bi bi-file-plus-fill"></i>&nbsp;Nuevo</a>
		
	</div>
	<hr>






	<table  class="table table-striped table-bordered datatable" style="width:100%">
		<thead class="table-dark">
			<tr>
				<th>Empresa</th>
				<th></th>
			</tr>

		</thead>
		<tbody style="vertical-align: middle;">
			{% for entity in entities %}
				<tr>
					<td>{{entity}}</td>
					<td style="text-align: right;">
						<a class="btn btn-dark text-light btn-sm" href="{{path('empresas_editar',{id:entity.id})}}" data-bs-toggle="tooltip" title="Editar" role="button">
							<i class="bi bi-pencil-square"></i>

						</a>
						<a class="btn btn-dark text-light btn-sm" href="{{path('empresas_editar',{id:entity.id})}}" data-bs-toggle="tooltip" title="Eliminar" role="button">
							<i class="bi bi-trash"> </i>

						</a>

					</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot class="table-dark">
			<tr>
				<td colspan="2"></td>
			</tr>
		</tfoot>
	</table>

{% endblock %}
